<%= link_to  "Add New", new_entrepreneur_path, class:'btn btn-primary pull-right' %>
<h2 class="page-header">Manage Entrepreneurship categories</h2>
<table class="table table-stripped">
    <tr>
      <th>Names</th>
      <th>Actions</th>
    </tr>
    <% if @entrepreneurships.exists? %>
       <% @entrepreneurships.each do |entrepreneurship|%>
         <tr>
            <td><%= entrepreneurship.name %></td>
            <td><%= link_to  "Edit", edit_entrepreneur_path(entrepreneurship), class:'btn btn-primary' %> | <%= link_to  "Delete",edit_entrepreneur_path(entrepreneurship), method: :delete, class:'btn btn-danger' %></td>
        </tr>
       <% end %>
    <% else %>
       <p>No entrepreneurship categories available currently</p>
    <% end %>
</table>
