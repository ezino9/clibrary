<%if user_signed_in? %>
<%= link_to  "Add New", new_research_path, class:'btn btn-primary pull-right' %>
<h2 class="page-header">Manage Researches Posts</h2>
<table class="table table-stripped">
    <tr>
      <th>Titles</th>
      <th>Actions</th>
    </tr>
    <% if @researches.exists? %>
       <% @researches.each do |research|%>
         <tr>
            <td><%= research.title %></td>
            <td><%= link_to  "Show", edit_research_path(research), class:'btn btn-primary' %> | <%= link_to  "Edit",edit_research_path(research), class:'btn btn-danger' %></td>
        </tr>
       <% end %>
    <% else %>
       <p>No Research Post available Now!!!</p>
    <% end %>
</table>
<% else %>
    <% if @researches.exists?%>
        <% @researches.each do |blog| %>
          <div class="well">
            <h3 class="page-header"><%= blog.title%></h3> 
            <%= raw blog.body%> 
          </div>
        <% end %>
    <% else %>
      <p>This page is under construction, it will be available as soon as possible</p>
    <% end %>
<% end %>